- obj.each do |category|
	.row
		.col-sm-8.col-sm-offset-2
			.well
				%p 
					= category.title
				.category-actions
					= link_to "Edit this category", edit_category_path(category), class:"btn btn-sm btn-primary"
					= link_to "Delete this category", category_path(category), method: :delete, data: {confirm: "Are you sure you want to delete?"}, class: "btn btn-sm btn-danger"